generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Blog {
  id        String   @id @default(cuid())
  title     String
  content   String
  imageUrl  String?
  createdAt DateTime @default(now())
}

model Analysis {
  id        String   @id @default(cuid())
  title     String
  fileUrl   String
  fileType  String   @default("pdf")
  createdAt DateTime @default(now())
}
